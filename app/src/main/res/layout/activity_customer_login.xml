<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerLoginActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/Customer_status"
            android:layout_width="305dp"
            android:layout_height="50dp"
            android:hint=" Customer Login"
            android:text="       Cutomer Login"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="115dp" />

        <EditText
            android:layout_width="353dp"
            android:layout_height="54dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="291dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="369dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="366dp" />

        <Button
            android:id="@+id/Customer_Login"
            android:layout_width="123dp"
            android:layout_height="45dp"
            android:text="Login"
            android:layout_gravity="center"
            android:layout_margin="30dp"

            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="459dp" />

        <TextView
            android:id="@+id/Customer_Register_Link"
            android:layout_width="212dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:text="Don't have an account"
            android:textColor="@android:color/holo_red_dark"
            />

        <Button
            android:id="@+id/Customer_Register"
            android:layout_width="190dp"
            android:layout_height="45dp"
            android:layout_marginBottom="88dp"
            android:text="Register"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            />
    </LinearLayout>

</RelativeLayout>